{
  "manifest_version": 3,
  "name": "Sticky Chirps",
  "version": "1.0",
  "description": "Leave cute voice notes on any webpage that persist across visits! ðŸ«§",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "microphone",
    "notifications",
    "contextMenus",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["accessibility/reader.js", "services/team-service.js", "services/heatmap-service.js", "content/bubble.js"],
      "css": ["content/bubble.css", "accessibility/accessibility.css", "styles/team-heatmap.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}